{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "outDir": "build",
    "noEmit": true
    // "paths": {
    //   "@/*": ["./src/*"]
    // }
  },
  "exclude": ["node_modules", "build"],
  "include": ["**/**/*.ts"]
}
